{
    "name": "VISOTrustARE",
    "id": "are_plugin",
    "version": "0.0.1",
    "patch_supported": true,
    "description": "This plugin creates vendor relationships in VISO Trust.",
    "configuration": [
        {
            "label": "VISOTrust URL",
            "key": "url",
            "type": "text",
            "default": "https://visotrust.com",
            "mandatory": true,
            "description": "VISOTrust instance URL."
        },
        {
            "label": "VISO Business Owner Email",
            "key": "email",
            "type": "text",
            "default": "",
            "mandatory": true,
            "description": "VISOTrust client email address."
        },
        {
            "label": "VISO API Token",
            "key": "token",
            "type": "password",
            "default": "",
            "mandatory": true,
            "description": "API Token."
        },
        {
            "label": "Maximum CCI",
            "key": "max_cci",
            "type": "number",
            "default": 100,
            "mandatory": true,
            "description": "Maximum CCI."
        },
        {
            "label": "Include Categories (CSV)",
            "key": "include_cats",
            "type": "text",
            "default": "",
            "mandatory": false,
            "description": "Include only these categories."
        },
        {
            "label": "Exclude Categories (CSV)",
            "key": "exclude_cats",
            "type": "text",
            "default": "",
            "mandatory": false,
            "description": "Exclude these categories."
        }
    ]
}
